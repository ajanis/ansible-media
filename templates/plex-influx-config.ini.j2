[GENERAL]
Delay = {{ plex_influx_delay }}
LibraryDelay = {{ plex_influx_library_delay }}
Output = {{ plex_influx_output }}

[INFLUXDB]
Address = {{ influxdb_server_ip | default('localhost') }}
Port = {{ influxdb_server_port | default('8086') }}
Database = {{ influxdb_plex_database | default('plex') }}
Username = {{ influxdb_server_username | default('') }}
Password = {{ influxdb_server_password | default('') }}
Verify_SSL = {{ influxdb_verify_ssl | default('False') }}

[PLEX]
Username = {{ plex_username | default('') }}
Password = {{ plex_password | default('') }}
# List of servers seperated by a comma.
# Example: 192.168.1.20,10.0.0.20
Servers = {{ plex_server_ip | default('localhost') }}

[LOGGING]
Enable = {{ plex_influx_logging | default('True') }}
# Valid Options: critical, error, warning, info, debug
Level = {{ plex_influx_log_level | default('error') }}
LogFile = {{ plex_influx_log_file | default('/var/log/plex-influxdb-collector.log') }}
# Removes things such as server names and ip addresses from logs
CensorLogs = {{ plex_influx_censor_logs | default('True') }}

# Any log messages greater than or equal to this number will also be printed to the console
# Output must also be true under GENERAL
# DEBUG: 0
# INFO: 1
# WARNING: 2
# ERROR: 3
# CRITICAL: 4
PrintThreshold = {{ plex_influx_log_stdout_threshold | default('1') }}
